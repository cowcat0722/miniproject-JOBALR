{{> layout/header}}


<!--기업 회원가입 화면-->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">기업 회원가입</div>
                <div class="card-body" style="padding-top: 0px;">
                    <form action="/join" method="post">
                        <div class="mb-3">
                            <label for="businessNumber" class="form-label" style="margin-top: 20px;">사업자
                                번호</label>
                            <input type="text" class="form-control" id="businessNumber" name="businessNumber"
                                   placeholder="ENTER businessNumber" required>
                        </div>

                        <div class="mb-3">
                            <label for="companyName" class="form-label">회사명</label>
                            <input type="text" class="form-control" id="companyName" name="companyName"
                                   placeholder="ENTER companyName" required>
                        </div>
                        <div class="mb-3">
                            <label for="companyAddress" class="form-label">회사 주소</label>
                            <input type="text" class="form-control" id="companyAddress" name="companyAddress"
                                   placeholder="ENTER companyAddress" required>
                        </div>

                        <!-- 인사 담당자 정보 -->
                        <div class="mb-3">
                            <div class="mb-3">
                                <label for="email" class="form-label">이메일 주소</label>
                                <div class="d-flex text-nowrap">
                                    <input type="email" class="form-control" id="email" name="email"
                                           placeholder="ENTER email" required>
                                    <button type="submit" class="btn btn-primary btn-block">이메일 중복 체크</button>
                                </div>
                            </div>
                            <div>
                                <div style="margin-bottom: 15px;">
                                    <label for="pw"
                                           style="background-color: white; margin-bottom: 8px;">비밀번호</label>
                                    <input type="password" class="form-control" id="pw" name="pw"
                                           placeholder="ENTER password" required>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="pw" class="form-label">가입자명</label>
                            <input type="password" class="form-control" id="pw" name="pw"
                                   placeholder="Enter userName" required>
                        </div>
                        <div class="mb-3">
                            <label for="hp" class="form-label">휴대폰 번호</label>
                            <input type="tel" class="form-control" id="hp" name="hp" placeholder="Enter phoneNumber"
                                   required>
                        </div>
                        <div class="text-center mb-3 ">
                            <button type="submit" class="btn btn-primary btn-block">가입하기</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br><br><br>
</div>




{{> layout/footer}}