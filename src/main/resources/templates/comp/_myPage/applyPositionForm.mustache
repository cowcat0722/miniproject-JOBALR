<script>
    // 서버로부터 지원자 목록을 받아와서 화면에 표시하는 함수
    async function displayApplicants(jobOpenId) {
        try {
            const response = await fetch(`/api/applicants/${jobOpenId}`);
            if (response.ok) {
                const applicants = await response.json();
                const container = document.getElementById("container");

                // 기존에 있던 카드 삭제
                container.innerHTML = "";

                // 받아온 지원자 목록을 이용하여 카드 생성
                applicants.forEach(applicant => {
                    const card = createApplicantCard(applicant);
                    container.appendChild(card);
                });
            } else {
                alert("서버 오류: 지원자 목록을 가져오지 못했습니다.");
            }
        } catch (error) {
            console.error("네트워크 오류:", error);
            alert("네트워크 오류: 지원자 목록을 가져오지 못했습니다.");
        }
    }

    // 지원자 정보를 이용하여 카드 생성하는 함수
    function createApplicantCard(applicant) {
        const card = document.createElement("div");
        card.classList.add("card");
        card.classList.add("col-md-4");
        card.innerHTML = `
        <div class="card-body">
            <h5 class="card-title">지원자 이름: ${applicant.name}</h5>
            <p class="card-text">공고 제목: ${applicant.jobTitle}</p>
            <p class="card-text">이력서 제목: ${applicant.resumeTitle}</p>
            <p class="card-text">학력: ${applicant.edu}</p>
            <p class="card-text">주소: ${applicant.address}</p>
        </div>
    `;
        return card;
    }

    // 페이지 로드 시 특정 공고에 대한 지원자 목록을 가져와서 표시
    window.onload = function() {
        const jobOpenId = 1;
        displayApplicants(jobOpenId);
    };

