                        </div>
                    </div>
                {{/resumeList}}
            </div>
        </div>
        <br><br><br>
    </div>
    <!-- 인재 명단 end -->

    <script>
        function toggleHeart({{id}}) {//북마크를 클릭 했을 때 AJAX 요청을 보내는 코드
            $.ajax({
                url: '/comp/scrap',
                type: 'post',
                data: {resume: id},
                success: function (data) {
                    //서버로 부터 받은 데이터를 이용하여 스크랩 화면을 업데이트하기.
                    console.log('스크랩 성공', data);
                    //이 단계에서 스크랩 페이지를 업데이트 하는 작업 수행 됨
                },
                error: function (xhr, status, error) {
                    console.error('오류 발생:', error);
                }
            });
        }
    </script>

