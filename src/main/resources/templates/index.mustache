{{> layout/header}}

<!--메인페이지-->

<div class="container">
    <!-- VIP 채용관 start -->
    <div class="mb-5 d-flex justify-content-center">
      <img src="/image/joba.png">
    </div>
    <!-- VIP 채용관 end -->


    <!-- 채용 공고 start -->
    <div class="mb-5" style="margin-top: -50px;">
        <div class="mt-5 mb-3">
            <h3 class="text-left"><b>채용 공고</b></h3>
        </div>
        <div class="d-flex">
            <div>
                {{#jobopenList}}
                    <a href="/comp/jobopen/{{id}}" class="btn">
                        <div class="card col-3 border-2" style="width: 400px;">
                            <img src="/image/jobaralogo.png" class="card-img-top" style="width:100%">
                            <div class="card-body text-start">
                                <br>
                                <h5 class="card-title">{{jobopenTitle}}</h5>
                                <hr>
                                <p class="card-text">{{compLocation}} {{career}} {{edu}}</p>
                            </div>
                        </div>
                    </a>
                {{/jobopenList}}


            </div>
        </div>
    </div>
    <!-- 채용 공고 end -->
</div>



{{> layout/footer}}
