{{> layout/header}}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>test Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .m-20 {
            margin: 20px;
        }

        .mt-50 {
            margin-top: 50px;
        }

        .ml-20 {
            margin-left: 20px;
        }

        .vipCompanyInfoBox {
            display: grid;
            grid-template-columns: auto auto auto auto auto;
            grid-column-gap: 10px;
            align-content: center;
        }

        .vipCompanyInfoImageBox img {
            border: 1px solid #000;
            padding: 5px;
            border-radius: 20px;
            height: 100%;
            width: 100%;
        }

        .companyInfoBox {
            display: grid;
            grid-template-columns: auto auto auto auto auto;
            grid-gap: 10px;
            justify-content: center;
            align-content: center;
        }

        .companyInfoImage {
            border: 1px solid #000;
            padding: 5px;
            border-radius: 20px;
            height: 150px;
            width: 327px;
        }

        .companyInfoImage img {
            height: 40%;
            width: 40%;
            border-radius: 20px;
        }
    </style>
</head>
<body>

<!-- VIP 채용관 start -->
<section>
    <div class="mt-50 m-20"><h3><b>VIP 채용관</b></h3></div>
    <div class="vipCompanyInfo m-20">
        <div class="vipCompanyInfoBox">
            <div class="vipCompanyInfoImageBox">
                <img src="image/vipimage1.png">
            </div>
            <div class="vipCompanyInfoImageBox">
                <img src="image/vipimage2.png">
            </div>
            <div class="vipCompanyInfoImageBox">
                <img src="image/vipimage3.png">
            </div>
            <div class="vipCompanyInfoImageBox">
                <img src="image/vipimage4.png">
            </div>
            <div class="vipCompanyInfoImageBox">
                <img src="image/vipimage5.png">
            </div>
        </div>
    </div>
</section>
<!-- VIP 채용관 end -->

<!-- 채용 공고 start -->
<section>
    <div class="companyInfo mt-50 m-20"><h3><b>채용 공고</b></h3></div>

    <div class="companyInfoBox m-20">
        <div class="companyInfoImage">
            <img class="companyImage"
                 src="image/companyimage1.png">
            <div class="text">플랫폼 프론트엔드 개발자 모집</div>
            <div class="text">팡고지와이</div>
            <div class="text">서울전체|2년|대졸이상</div>
        </div>
        <div class="companyInfoImage">
            <img class="companyImage"
                 src="image/companyimage2.png">
            <div class="text">프론트엔드 개발자 채용</div>
            <div class="text">(주)엘리스</div>
            <div class="text">서울전체|경력|대졸이상</div>
        </div>
        <div class="companyInfoImage">
            <img class="companyImage"
                 src="image/companyimage3.png">
            <div class="text">DBA-MySQL</div>
            <div class="text">(주)야놀자</div>
            <div class="text">서울전체|3년|학년무관</div>
        </div>
        <div class="companyInfoImage">
            <img class="companyImage"
                 src="image/companyimage4.png">
            <div class="text">정부과제 기획자 (5년 이상)</div>
            <div class="text">(주)블루앤트</div>
            <div class="text">서울전체|5년|대졸이상</div>
        </div>
    </div>
</section>
<!-- 채용 공고 end -->

</div>

</body>
</html>

{{> layout/footer}}