{{> layout/header}}

<!--개인 지원현황 페이지-->
<div class="container">
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="upMenu text-center mb-4">
                    <h1>마이페이지</h1>
                    <div class="btn-group btn-group-lg">
                        <a href="/guest/profileForm">
                            <button type="button" class="btn btn-outline-dark m-1" id="profileBtn">프로필 관리</button>
                        </a>
                        <a href="/guest/mngForm">
                            <button type="button" class="btn btn-outline-dark m-1">이력서 관리</button>
                        </a>
                        <a href="/applyStatusForm">
                            <button type="button" class="btn btn-outline-dark m-1">지원 관리</button>
                        </a>
                        <a href="/guest/scrapForm">
                            <button type="button" class="btn btn-outline-dark m-1">스크랩한 기업</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col">
                <div class="applyBox">
                    <h2 class="text-left">지원 현황</h2>

                    <table class="table" id="applicationTable">
                        <thead>
                        <tr>
                            <th>공고 제목</th>
                            <th>이력서 제목</th>
                            <th>상태</th>
                        </tr>
                        </thead>
                        {{#applystate}}
                            <tbody>
                            <tr>
                                <td>{{jobopenTitle}}</td>
                                <td>{{resumeTitle}}</td>
                                <td>{{state}}</td>
                            </tr>
                            </tbody>
                        {{/applystate}}
                    </table>
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>
    <br>
    <div class="card border-0">
        <div class="profileBox" id="profileForm">

            <h2 class="text-left mb-4" style="margin-top: -50px;">제안 <span class="badge bg-info" id="offerCount"></span>
            </h2>
            <div class="row">
                <div class="col">
                    <div class="applyBox">
                        <table class="table" style="margin-top: -10px; max-width: 100%;">
                            <thead>
                            <tr>
                                <th scope="col">이름</th>
                                <th scope="col">이력서</th>
                                <th scope="col">공고명</th>
                                <th scope="col">상태</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#applystate2}}
                                <tr>
                                    <td>{{name}}</td>
                                    <td>{{resumeTitle}}</td>
                                    <td>{{jobopenTitle}}</td>
                                    <td>{{state}}</td>
                                </tr>
                            {{/applystate2}}
                            <!-- 추가 제안 내용들 -->
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
</div>
{{> layout/footer}}