{{> layout/header}}

<!--게시판 상세페이지-->
<div class="container mt-5 p-5">
    <div class="d-flex justify-content-between">
        <div>
            <h2><b>{{board.title}}</b></h2>
        </div>
        <div>
            <b>작성자</b> {{board.username}}
            <div>
                <form action="/board/{id}/updateForm" method="get">
                    <a href="/board/{{board.id}}/updateForm" class="btn btn-warning me-1">수정</a>
                </form>
                <form action="/board/{{board.id}}/delete" method="post">
                    <button class="btn btn-danger">삭제</button>
                </form>
            </div>
        </div>
    </div>
    <hr>
    <br>
    <!-- 게시글내용 -->
    <div class="mb-5">
        <p>
            {{board.content}}
        </p>
    </div>
    <!-- 댓글 -->
    <div class="card mt-3">
        <!-- 댓글등록 -->
        <div class="card-body">
            <form action="/reply/save" method="post">
                <input type="hidden" name="boardId" value="1">
                <textarea class="form-control" rows="2" name="comment"></textarea>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-primary mt-1">댓글등록</button>
                </div>
            </form>
        </div>
        <!-- 댓글목록 -->
        <div class="card-footer">
            <b>댓글리스트</b>
        </div>
        <div class="list-group">
        {{#replyList}}
            <!-- 댓글아이템 -->
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div class="d-flex">
                    <div class="px-1 me-1 bg-primary text-white rounded">{{username}}</div>
                    <div>{{comment}}</div>
                </div>
                <form action="/reply/1/delete" method="post">
                    <button class="btn"><i class="fa-solid fa-trash"></i></button>
                </form>
            </div>
        {{/replyList}}
        </div>

    </div>
    <br><br>
</div>


{{> layout/footer}}