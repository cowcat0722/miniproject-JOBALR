{{> layout/header}}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>기업 마이페이지 -> 프로필 관리</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="profileBox mt-3" id="profileForm">
                <h2 class="text-center mb-4">자유게시판</h2>
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">이름</th>
                        <th scope="col">문의 제목</th>
                        <th scope="col">진행사항</th>
                        <th scope="col">관리</th> <!-- Added -->
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>1</td>
                        <td>홍길동</td>
                        <td>부트스트랩 질문</td>
                        <td>진행 중</td>
                        <td> <!-- Added -->
                            <button class="btn btn-primary btn-sm">수정</button>
                            <button class="btn btn-danger btn-sm">삭제</button>
                        </td>
                    </tr>
                    <!-- 추가 게시글 내용 -->
                    </tbody>
                </table>
            </div>

            <div class="text-center mb-3">
                <button class="btn btn-primary" id="writeBtn">글쓰기</button>
            </div>
        </div>
    </div>
</div>

<!-- 글쓰기 모달 -->
<div class="modal fade" id="writeModal" tabindex="-1" aria-labelledby="writeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="writeModalLabel">글쓰기</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- 글쓰기 폼 -->
                <form id="writeForm">
                    <div class="mb-3">
                        <label for="name" class="form-label">이름</label>
                        <input type="text" class="form-control" id="name" name="name">
                    </div>
                    <div class="mb-3">
                        <label for="title" class="form-label">문의 제목</label>
                        <input type="text" class="form-control" id="title" name="title">
                    </div>
                    <button type="submit" class="btn btn-primary">작성</button>
                </form>
            </div>
        </div>
    </div>
</div>

</body>

</html>

