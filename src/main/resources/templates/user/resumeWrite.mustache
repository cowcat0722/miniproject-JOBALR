{{> layout/header}}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <title>Document</title>
</head>

<body>
<div class="container p-5">
    <div>
        <input class="mb-3" type="text" name="" id="" placeholder="이력서 제목"
               style="font-size: 30px; border-radius: 5px;">
    </div>

    <div class="card mb-2">
        <div>
            <h5 class="card-header">인적사항</h5>
        </div>

        <div class="card-body">
            <div>
                <table class="table table-bordered">
                    <tbody style="font-size: 10px;">
                    <tr>
                        <th>이름</th>
                        <td>홍길동</td>
                    </tr>
                    <tr>
                        <th>나이</th>
                        <td>만 25세</td>
                    </tr>
                    <tr>
                        <th>이메일</th>
                        <td>ssar@nate.com</td>
                    </tr>
                    <tr>
                        <th>전화번호</th>
                        <td>010-1111-2222</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card mb-2">
        <div>
            <h5 class="card-header">희망직무</h5>
            <div class="container m-2">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" value="something">
                    <div>프론트엔드</div>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" value="something">
                    <div>백엔드</div>
                </div>
            </div>
        </div>

    </div>

    <div class="card mb-2">
        <div>
            <h5 class="card-header">스킬</h5>
        </div>

        <div class="row m-2">

            <div class="col-sm-2">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" value="something">
                    <div>Java</div>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" value="something">
                    <div>Java</div>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" value="something">
                    <div>JavaScript</div>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" value="something">
                    <div>Spring</div>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" value="something">
                    <div>HTML</div>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" value="something">
                    <div>jQury</div>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" value="something">
                    <div>JSP</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-2">
        <div>
            <h5 class="card-header">학력</h5>
            <div class="d-flex m-2">
                <div class="col-sm-4">
                    <select class="form-select">
                        <option>학력 선택</option>
                        <option>중학교</option>
                        <option>고등학교</option>
                        <option>대학교(2,3년)</option>
                        <option>대학교(4년)</option>
                    </select>
                </div>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="" id="" placeholder="학교를 입력하세요">
                </div>
                <div class="col-sm-4">
                    <select class="form-select">
                        <option>졸업 여부</option>
                        <option>재학</option>
                        <option>중퇴</option>
                        <option>졸업</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-2">
        <div>
            <h5 class="card-header">경력</h5>
            <div class="col-sm-4 m-2">
                <select class="form-select">
                    <option value="">선택</option>
                    <option value="1">신입</option>
                    <option value="2">1~3년</option>
                    <option value="3">3~5년</option>
                    <option value="4">5년 이상</option>
                </select>
            </div>
        </div>
    </div>

    <div class="card mb-2">
        <div class="d-flex justify-content-between card-header">
            <h5>자격증</h5>
            <button class=" btn btn-primary btn-sm " id="btnLicense">추가</button>
        </div>
        <div class="m-2 row" id="licenseList">
        </div>
    </div>

    <div class="card mb-2">
        <div>
            <h5 class="card-header">자기소개서</h5>
            <textarea class="form-control" rows="5" id="comment" name="text"></textarea>
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <button class=" btn btn-primary btn-lg">작성완료</button>
    </div>
    <br>
    <br>
</div>

</body>

<script>
    $("#btnLicense").click(() => $("#licenseList").append(`<div class="col-sm-4 mb-1"><input type="text" placeholder="자격증 이름 입력" class="form-control"></div>`));
</script>

</html>
{{> layout/footer}}
