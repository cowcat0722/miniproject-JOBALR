{{> layout/header}}

<!--기업, 개인 로그인 폼-->
<div class="container mt-3">
    <div class="">
        <div class="card-body">
            <div class="btn-group d-flex justify-content-center mb-3">
                <!--                개인이 로그인을 할때 사용-->
                <form action="/compJoin" method="post" enctype="application/x-www-form-urlencoded">
                    <input type="hidden" name="role" value="0">
